<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/item_nurse_process_vp_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="8.0"
        android:background="@mipmap/ic_drawer_list_set"
        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/item_nurse_process_vp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:text="dfedfe"
        />
    <TextView
        android:id="@+id/item_nurse_process_vp_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:text="dfedfe"
        />
    <TextView
        android:id="@+id/item_nurse_process_vp_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_weight="1.0"
        android:textColor="@color/colorPrimary"
        android:text="dfedfe"
        />
    <TextView
        android:id="@+id/item_nurse_process_vp_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_weight="1.0"
        android:textColor="@color/colorPrimary"
        android:text="1'30"
        />
    <LinearLayout
        android:id="@+id/item_nurse_process_vp_pp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_nurse_process_vp_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_nurse_pause"/>
        <ImageView
            android:id="@+id/item_nurse_process_vp_next"
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_nurse_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_nurse_process_vp_pe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/item_nurse_process_vp_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_nurse_pause"/>
        <TextView
            android:id="@+id/item_nurse_process_vp_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text="结束"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/item_nurse_process_vp_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/point_tip"
        android:drawablePadding="5dp"
        android:gravity="left"
        android:text="1'30"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />
</LinearLayout>
