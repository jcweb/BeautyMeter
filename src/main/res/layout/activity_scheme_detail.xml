<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="ui"
            type="cn.yaman.activity.SchemeDetailActivity"></variable>
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ll_container_schenme_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"

        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_start_scheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rectangle_solid_green"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:text="@string/button_start_scheme"
            android:visibility="invisible"
            android:onClick="startNurse"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_scheme_detail"
            android:layout_width="match_parent"
            android:layout_above="@+id/tv_start_scheme"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"></androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>
</LinearLayout>

</layout>
