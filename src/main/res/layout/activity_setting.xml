<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ui"
            type="cn.yaman.activity.SettingActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivide" />

        <TextView
            android:id="@+id/tv_set_change_pw"
            style="@style/stye_home_drawer_list_text"
            android:drawableRight="@mipmap/ic_set_right_arrow"
            android:onClick="modifyPw"
            android:text="修改密码"
            android:textColor="@color/color_black_666" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivide" />

        <TextView
            android:id="@+id/tv_set_change_phone"
            style="@style/stye_home_drawer_list_text"
            android:drawableRight="@mipmap/ic_set_right_arrow"
            android:text="更换手机"
            android:onClick="modifyPhone"
            android:textColor="@color/color_black_666" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivide" />

        <TextView
            android:id="@+id/tv_set_clear"
            style="@style/stye_home_drawer_list_text"
            android:drawableRight="@mipmap/ic_set_right_arrow"
            android:text="清除缓存"
            android:textColor="@color/color_black_666" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivide" />
    </LinearLayout>
</layout>
