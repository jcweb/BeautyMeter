<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_round_bg_gray"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/dialog_edit_title"
        android:textColor="@color/color_dialog_text"
        android:textSize="@dimen/sp_18" />

    <EditText
        android:id="@+id/et_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/rectangle_round_bg_black"
        android:hint="@string/dialog_edit_hint"
        android:padding="10dp"
        android:textColor="@color/color_dialog_text"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c5cacb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ecf1f2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/dialog_btn_cancel"
            android:textColor="@color/color_dialog_text"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c5cacb" />

        <TextView
            android:id="@+id/tv_edit_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/dialog_btn_save"
            android:textColor="@color/color_dialog_text"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
</LinearLayout>