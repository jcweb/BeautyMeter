<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/sp_18"
    android:background="@drawable/rectangle_round_bg_white"
    android:orientation="vertical">


        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/dialog_exit_title"
            android:textColor="@color/color_black_333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:background="@color/color_black_666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exit_cancel"
                style="@style/style_dialog_btn"
                android:text="@string/dialog_btn_cancel" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_black_666" />

            <TextView
                android:id="@+id/tv_exit_confirm"
                style="@style/style_dialog_btn"
                android:text="@string/dialog_btn_confirm" />
        </LinearLayout>
</LinearLayout>